<Window x:Class="UT6_2_Aplicaciones_con_más_de_una_vista.Ventanas.VentanaAddNacionalidad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UT6_2_Aplicaciones_con_más_de_una_vista.Ventanas"
        mc:Ignorable="d"
        Title="Añadir Nacionalidad" Height="125" Width="300" 
        ResizeMode="NoResize" 
        ShowInTaskbar="False" 
        Icon="/Recursos/añadir.ico">
    <StackPanel Orientation="Vertical" Margin="10">
        <TextBlock>Nacionalidad</TextBlock>
        <TextBox x:Name="tbxNacionalidad"></TextBox>
        <StackPanel Margin="0,10" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnAceptar" IsDefault="True" Click="btnAceptar_Click">Aceptar</Button>
            <Button x:Name="btnCancelar" Margin="5,0" IsCancel="True">Cancelar</Button>
        </StackPanel>
    </StackPanel>
</Window>
